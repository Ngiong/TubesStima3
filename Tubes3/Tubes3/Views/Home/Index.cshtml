@{
    ViewBag.Title = "Home Page";
}

<h1>Tweets : </h1>

<div>
    @foreach (dynamic item in ViewBag.TweetsCategorized.getListTweetFromCategory(1))
    {
        <div class="overlay">
            <div class="overlaycontent">
                <img src=@item.getImageURL()>
                <h4>@item.getText()</h4>
                <h4>@item.getCategory()</h4>
            </div>
        </div>
    }
</div>

